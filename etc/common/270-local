# Kişisel Ayarlar

# Aşağıda listelenen makineleri "ana" makine kabul ediyoruz.
case "${HOSTNAME:=$(hostname)}" in
kant|spinoza|marx|descartes|wittgenstein|averroes|ghazali|farabi)
	setattr main
	;;
esac

# Debian paketlemelerinde kullanılacak isim ve adres.
DEBFULLNAME='Recai Oktaş'
DEBEMAIL='roktas@debian.org'
export DEBFULLNAME DEBEMAIL

# Masaüstü klasörü istemiyoruz.
XDG_DESKTOP_DIR="$HOME/"
export XDG_DESKTOP_DIR
